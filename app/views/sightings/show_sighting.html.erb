<h2><%=@sighting.animal.name %> Sighting Update</h2>

<h3>Update sighting<h3>

<form id="edit_sighting" action="/sightings/<%= @sighting.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="sighting_date">Date</label>
  <input id="sighting_date" name="sighting[date]" type="date" value="<%=@sighting.date %>">
  <select form="edit_sighting" name="sighting[region_id]">
    <% @regions.each_with_index do |region, index| %>
      <option value="<%= region.id %>" <%= @selected[index] %>  ><%= region.name %></option>
    <% end %>
  </select>
  <label for="sighting_lat">Latitude</label>
  <input id="sighting_lat" name="sighting[lat]" type="text" value="<%=@sighting.lat %>">
  <label for="sighting_long">Longitude</label>
  <input id="sighting_long" name="sighting[long]" type="text" value="<%=@sighting.long %>">
  <button> Change sighting</button>
</form>

<p><a href="/sightings/<%= @sighting.id %>"
  data-confirm = "Are you sure?"
  data-method = "Delete"
  rel = "nofollow">Delete sighting</a></p>
