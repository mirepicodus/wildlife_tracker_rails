<h2><%= @region.name %></h2>

<% if @region.errors.any? %>
  <h3>Please fix this error:</h3>
  <ul>
  <% @region.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<form action="/regions/<%= @region.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="region_name">Name</label>
  <input id="region_name" name="region[name]" type="text" value="<%=@region.name %>">
  <button>Update region</button>
</form>

<p><a href="/regions/<%= @region.id %>"
  data-confirm = "Are you sure?"
  data-method = "Delete"
  rel = "nofollow">Delete region</a></p>

<p><a href='/regions'>Return to regions</a></p>
